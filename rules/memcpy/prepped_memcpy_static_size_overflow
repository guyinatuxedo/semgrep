  - id: memcpy_static_size_overflow
    languages:
     - c
    message: <replace_this> can scan in more data than dst can hold.
    patterns:
     - pattern: $DATA_TYPE $DST[$DST_SIZE];
         ...
         <replace_this>($DST, $SRC, $SIZE);
     - metavariable-comparison:
         comparison: $SIZE > $DST_SIZE
         metavariable: $SIZE
    severity: INFO 
